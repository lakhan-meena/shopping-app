<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
          <h3 class="user-title">Edit Profile</h3>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, validate: true) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="col-md-12">
              <div class="text-center">
                <% if @user.profile_picture.url.present? %>
                  <%= image_tag @user.profile_picture.url, class: "user-profile-image" %>
                  <%= f.file_field :profile_picture, label: false, class: "user-pic-ctsm" %>
                <% else %>
                  <%= image_tag('user', class: "user-profile-image") %>
                  <%= f.file_field :profile_picture, label: false, class: "user-pic-ctsm" %>
                <% end %>
              </div>
              <%= f.input :first_name, autofocus: true, label: "First Name" %>
              <%= f.input :last_name, autofocus: true, label: "Last Name"  %>
              <%= f.input :username, required: true %>
              <%= f.input :mobile_number, required: true, label: "Phone Number" %>
              <%= f.input :email, required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= link_to 'Cancel'.html_safe, root_path, class: 'btn btn-primary' %>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </div>
       <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
          <h3 class="user-title">Update Password</h3>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="col-md-12">
              <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
              <%= f.input :password_confirmation, required: false, label: "Password Confirmation" %>
              <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: "Current Password" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= link_to 'Cancel'.html_safe, root_path, class: 'btn btn-primary' %>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
