<div class="register-form">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="login-header">
      <h4 style="padding-top: 15px;">Forgot your password?</h4>
    </div>
    <div class="form-content">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.input :email, required: true, label: false, input_html: {placeholder: "Email", class: "form-control"} %>
          </div>
        </div>
      </div>
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block"  %>
      <%#= render "users/shared/links" %>
    </div>
  <% end %>
</div>
