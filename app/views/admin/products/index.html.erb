<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-6">
            <h4 class="card-title">Product List</h4>
          </div>
          <div class="col-6">
            <%= link_to "<i class='fa fa-plus-circle'></i> Add Product".html_safe, new_admin_product_path, class: 'btn btn-primary float-right'%>
          </div>
        </div>
      </div>
      <div class="card-body">
        <table id= "product-datatable" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Title</th>
              <th>Availability</th>
              <th>SKU</th>
              <th>Part Number</th>
              <th>Category</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each_with_index do |product, index| %>
              <tr>
                <td><%= product.title %></td>
                <td><%= product.status %></td>
                <td><%= product.sku %></td>
                <td><%= product.part_number %></td>
                <td><%= product.category.name %></td>
                <td><%= product.price %></td>
                <td><%= product.on_hand %></td>
                <td><%= product.description %></td>
                <td>
                  <%= link_to "<i class='fa fa-eye'></i>".html_safe, admin_product_path(product) %>&nbsp
                  <%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_admin_product_path(product) %>&nbsp
                  <%= link_to "<i class='fa fa-trash'></i>".html_safe, admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "<i class='fa fa-plus-circle'></i> Add Product".html_safe, new_admin_product_path, class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
</div>

<script>
   $(document).ready(function() {
    $("#product-datatable").dataTable({
      columnDefs: [{orderable: false, targets: [8]}],
      pagingType: "simple_numbers",
      info: true,
      pageLength: 25,
      lengthChange: true,
      language: {
        search: "_INPUT_",
        searchPlaceholder: "Search Products..."
      }
    });
  });
</script>
