<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-6">
            <h4>Category Details</h4>
          </div>
          <div class="col-6">
            <%= link_to "Back", admin_categories_path, class: "float-right btn btn-primary" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <p>
          <b>Name:</b> <%= @category.name %><br/>
          <b>Description:</b> <%= @category.description %>
        </p>
        <% if @category.children.present? %>
          <h5>Childrens</h5>
          <% @category.children.each do |children| %>
            <p>
              <b>Name:</b> <%= children.name %><br/>
              <b>Description:</b> <%= children.description %>
            </p>
          <% end %>
        <% end %>
        <%= link_to 'Back', admin_categories_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
