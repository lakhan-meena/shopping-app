<%= simple_form_for [:admin, @category] do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.input :parent_id, label: "Belongs under this category", collection: @categories_tree, selected: @category.parent_id, include_blank: false %>
        <%= f.input :name %>
        <%= f.input :description, as: :text, input_html: {rows: 5} %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to "Cancel", admin_categories_path, class: "btn btn-primary" %>
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
