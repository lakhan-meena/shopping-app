<div class="row">
  <%= render partial: 'categories_sidebar' %>
  <div class="col">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-12 col-md-6 col-lg-4 pdbtm_10">
          <div class="card">
            <% if product.product_image.present? %>
              <%= image_tag product.product_image.url, class: "card-img-top custom_img_list" %>
            <% else %>
              <%= image_tag('no_product_img', class: "card-img-top custom_img_list") %>
            <% end %>
            <div class="card-body">
              <h4><%= link_to "#{product.title}", product_path(product), class: "card-title" %></h4>
              <p class="card-text"><%= truncate(product.description, length: 25) %></p>
              <div class="row">
                <div class="col">
                  <span class="btn btn-primary "><%= product.price %></span>
                  <span><a href="#" class="btn btn-primary">Add to cart</a></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="col-md-12">
        <div class="digg_pagination">
          <%= will_paginate @products, :container => false %>
        </div>
      </div>
    </div>
  </div>  
</div>
