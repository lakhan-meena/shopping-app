<div class="row">
  <div class="col-md-6">
  	<% if @product.product_image.present? %>
      <%= image_tag @product.product_image.url, class: "img-fluid-show" %>
    <% else %>
      <%= image_tag('no_product_img', class: "img-fluid-show") %>
    <% end %>
  </div>
  <div class="col-md-6">
  	<h3 class="my-3 product-title"><%= @product.title %></h3>
    <p><%= @product.description %></p>
    <h5 class="my-3">Current Price: <%= @product.price %></h5>
    <p>
      <b>SKU:</b> <%= @product.sku %><br/>
      <b>Part Number:</b> <%= @product.part_number %><br/>
      <b>Discount:</b> <%= @product.discount %><br/>
      <b>Stock:</b> <%= @product.on_hand %><br/>
    </p>
    <%= render partial: "add_to_cart" %>
  </div>
</div>

